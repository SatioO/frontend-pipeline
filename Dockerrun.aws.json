{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "vaibhavsatam/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "vaibhavsatam/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "mongo",
            "image": "mongo",
            "hostname": "mongo",
            "essential": false,
            "memory": 128,
            "mountPoints": [
                {
                    "sourceVolume": "db",
                    "containerPath": "/var/app/data/db"
                }
            ]
        },
        {
            "name": "nginx",
            "image": "vaibhavsatam/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "client",
                "server",
                "mongo"
            ]
        }
    ],
    "volumes": [
        {
            "name": "db",
            "host": {
                "sourcePath": "/var/app/data/db"
            }
        }
    ],
}